						<AbsDimension x="32" y="32"/>
					</Size>
					<Anchors>
						<Anchor point="RIGHT">
							<Offset>
								<AbsDimension x="-16" y="82"/>
							</Offset>
						</Anchor>
					</Anchors>
					<TexCoords left="0.875" right="1.0" top="0" borrom="1.0"/>
				</Texture>
				<Texture name="$parentTextureCenter" file="Interface\ChatFrame\UI-ChatInputBorder-Right">
